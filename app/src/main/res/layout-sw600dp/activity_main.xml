<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:baselineAligned="false" android:orientation="horizontal"
    android:divider="?android:attr/dividerHorizontal">

    <FrameLayout
        android:id="@+id/id_movies_container"
        android:layout_width="0dp"
        android:layout_weight ="3"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/id_details_container"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/id_no_internet_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>